{
  "name": "dbo-universal-translation-tool",
  "version": "1.0.227",
  "description": "DBO Universal Translation Tool",
  "main": "main.js",
  "scripts": {
    "build": "node scripts/increment-version.js && webpack --mode production --env target=electron && npx electron-builder --windows --publish never",
    "dev": "webpack --mode development --watch --env target=electron",
    "start": "webpack --mode production --env target=electron && electron .",
    "electron": "electron .",
    "serve": "webpack serve --mode development --env target=web --open",
    "webserver": "webpack serve --mode development --env target=web --open",
    "type-check": "tsc --noEmit"
  },
  "keywords": [],
  "author": "DBO Community",
  "license": "MIT",
  "build": {
    "appId": "com.dbo.universaltranslation",
    "productName": "DBO Universal Translation Tool",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js"
    ],
    "extraFiles": [
      {
        "from": "config.xml",
        "to": "."
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "artifactName": "${productName}-${arch}.${ext}"
    },
    "forceCodeSigning": false,
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": null,
      "uninstallerIcon": null,
      "artifactName": "${productName} Setup.${ext}"
    },
    "portable": {
      "artifactName": "${productName} Portable.${ext}"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "@babel/preset-typescript": "^7.23.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "electron": "^39.0.0",
    "electron-builder": "^24.13.3",
    "html-webpack-plugin": "^5.5.3",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@fortawesome/react-fontawesome": "^3.1.0",
    "buffer": "^6.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
